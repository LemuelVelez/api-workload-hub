{
    "compilerOptions": {
      "target": "ES2022",
      "lib": ["ES2022"],
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
  
      "rootDir": "./src",
      "outDir": "./dist",
  
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      },
  
      "types": ["node"],
  
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "strict": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  